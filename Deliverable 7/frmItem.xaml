        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="38*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnYes" Grid.ColumnSpan="2" Content="Yes" HorizontalAlignment="Left" Margin="28,162,0,0" VerticalAlignment="Top" Width="96" Height="39" Click="btnYes_Click"/>
        <Button x:Name="btnNo" Content="No" Grid.Column="1" HorizontalAlignment="Left" Margin="113.4,162,0,0" VerticalAlignment="Top" Width="82" Height="39" Click="btnNo_Click"/>
        <TextBlock x:Name="txtFound" HorizontalAlignment="Left" Margin="28,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="233"/>

    </Grid>
</Window>